<div class="col-lg-11 mx-auto">
    <h1>The Projects:</h1>
    {{#each project}}
    <div class="d-flex flex-column col-lg-10 mx-auto">
        <h3>{{title}}</h3>
        <a href="/viewprojects/{{id}}"><img src="{{img}}" alt="Project {{id}}" class="col-lg-12"></a>
        <h5>{{description}}</h5>
        <a href="{{site_url}}" target="_blank" class="text-light">Website: {{title}}</a>
        <a href="{{github_url}}" target="_blank" class="text-light mb-4">GitHub Repository</a>
    </div>
    {{/each}}
</div>

<button class="d-flex col-lg-2 mx-auto mb-5 bg-dark text-light justify-content-center" id="submitBtn">Create New Project</button>

<script src="/js/viewprojects.js"></script>